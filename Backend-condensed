    hash_fame3.append(hash_object.hexdigest()) #hashes of the most popular words 
    
    


#Asking user for the category 
category = raw_input("Category ") # Enter: economics, entertainment or politics
article = raw_input('paste your article here ')

if category == 'economics':
    estential_vocab = []
    for word in article.split():

        #for every word in a new article compute a hash function and see if it is in the hash_fame
        hash_object = hashlib.md5(word)
        #print(hash_object.hexdigest()), word
        if (hash_object.hexdigest()) in hash_fame:
            #print("fam"), word
            estential_vocab.append(word)  # which words are how many times they occur   #highlight the word

    #from the article that you pasted all the unique 
    if len(np.unique(estential_vocab))> len(article.split())/(len(article.split())*0.75):
        print ("article good for learning")
    else:
        print ("chose another article for learning")
    print (' ')
    print ("The words in the article that you should focus on learning: "  )
    print (np.unique(estential_vocab))
    
if category == 'entertainment':

    estential_vocab2 = []
    for word in article.split():

        #for every word in a new article compute a hash function and see if it is in the hash_fame
        hash_object = hashlib.md5(word)
        #print(hash_object.hexdigest()), word
        if (hash_object.hexdigest()) in hash_fame2:
            #print("fam"), word
            estential_vocab2.append(word)  # which words are how many times they occur   #highlight the word

    #from the article that you pasted all the unique 
    if len(np.unique(estential_vocab2))> len(article.split())/(len(article.split())*0.75):
        print ("article good for learning")
    else:
        print ("chose another article for learning")
    print (' ')
    print ("The words in the article that you should focus on learning: "  )
    print (np.unique(estential_vocab2)) 
    
if category == 'politics':

    estential_vocab3 = []
    for word in article.split():

        #for every word in a new article compute a hash function and see if it is in the hash_fame
